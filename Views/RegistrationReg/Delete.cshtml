@model ITMO_FinalWork.Models.RegistrationReg

@{
    ViewData["Title"] = "Удаление регистрационной записи";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>Удаление записи #@Model.RecordID
            </h3>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <h4 class="alert-heading">Внимание!</h4>
                Вы действительно хотите безвозвратно удалить эту запись?
            </div>

            <div class="section mb-4">
                <h5 class="section-title text-primary mb-3">
                    <i class="bi bi-person-badge me-2"></i>Личные данные
                </h5>
                <div class="row">
                    <div class="col-md-4">
                        <dl>
                            <dt>Фамилия</dt>
                            <dd>@Model.LastName</dd>

                            <dt>Дата рождения</dt>
                            <dd>@Model.BirthDate.ToShortDateString()</dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl>
                            <dt>Имя</dt>
                            <dd>@Model.FirstName</dd>

                            <dt>Пол</dt>
                            <dd>@Model.Gender</dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl>
                            <dt>Отчество</dt>
                            <dd>@Model.MiddleName</dd>
                        </dl>
                    </div>
                </div>   
                </div>
            </div>

            <div class="section mb-4">
                <h5 class="section-title text-primary mb-3">
                    <i class="bi bi-passport me-2"></i>Паспортные данные
                </h5>
                <div class="row g-3">
                    <div class="col-md-3">
                        <dt>Серия</dt>
                        <dd>@Model.Passport?.Series</dd>
                    </div>
                    <div class="col-md-3">
                        <dt>Номер</dt>
                        <dd>@Model.Passport?.Number</dd>
                    </div>
                    <div class="col-md-3">
                        <dt>Дата выдачи</dt>
                        <dd>@Model.Passport?.IssueDate.ToShortDateString()</dd>
                    </div>
                    <div class="col-md-3">
                        <dt>Действителен до</dt>
                        <dd>@Model.Passport?.ExpiryDate?.ToShortDateString()</dd>
                    </div>
                </div>
            </div>

            <div class="section mb-4">
                <h5 class="section-title text-primary mb-3">
                    <i class="bi bi-calendar-event"></i> Информация о пребывании
                </h5>
                <div class="row">
                    <div class="col-md-4">
                        <dl>
                            <dt>Статус</dt>
                            <dd><span class="badge bg-info">@Model.Status</span></dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl>
                            <dt>Дата регистрации</dt>
                            <dd>@Model.RegistrationDate.ToShortDateString()</dd>
                        </dl>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <dl>
                                <dt>Адрес регистрации</dt>
                                <dd>@Model.RegistrationAddress</dd>
                            </dl>
                        </div>
                    </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="RecordID" />
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash3-fill me-2"></i>Удалить навсегда
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Назад к списку
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .section {
            padding: 1.5rem;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .section-title {
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 0.5rem;
        }

        dt {
            font-weight: 500;
            color: #6c757d;
            min-width: 140px;
        }

        dd {
            margin-bottom: 0.5rem;
            color: #212529;
        }

        .card {
            border-radius: 12px;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
    </style>
}
@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}