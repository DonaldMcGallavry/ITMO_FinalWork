@model ITMO_FinalWork.Models.MigrationReg

@{
    ViewData["Title"] = "Детали миграционной записи";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Миграционная запись #@Model.MigrantID</h3>
        </div>

        <div class="card-body">

            <div class="section mb-4">
                <h5 class="section-title text-primary mb-3">
                    <i class="bi bi-person-badge"></i> Личные данные
                </h5>
                <div class="row">
                    <div class="col-md-4">
                        <dl>
                            <dt>Фамилия</dt>
                            <dd>@Model.LastName</dd>

                            <dt>Имя</dt>
                            <dd>@Model.FirstName</dd>

                            <dt>Отчество</dt>
                            <dd>@Model.MiddleName</dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl>
                            <dt>Дата рождения</dt>
                            <dd>@Model.BirthDate.ToShortDateString()</dd>

                            <dt>Пол</dt>
                            <dd>@(Model.Gender == "M" ? "Мужской" : "Женский")</dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl>
                            <dt>Гражданство</dt>
                            <dd>@Model.Citizenship</dd>

                            <dt>Страна рождения</dt>
                            <dd>@Model.BirthCountry</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="section mb-4">
                <h5 class="section-title text-primary mb-3">
                    <i class="bi bi-passport"></i> Паспортные данные
                </h5>
                <div class="row">
                    <div class="col-md-3">
                        <dt>Серия</dt>
                        <dd>@Model.Passport.Series</dd>
                    </div>
                    <div class="col-md-3">
                        <dt>Номер</dt>
                        <dd>@Model.Passport.Number</dd>
                    </div>
                    <div class="col-md-3">
                        <dt>Дата выдачи</dt>
                        <dd>@Model.Passport.IssueDate.ToShortDateString()</dd>
                    </div>
                    <div class="col-md-3">
                        <dt>Действителен до</dt>
                        <dd>@Model.Passport.ExpiryDate?.ToShortDateString()</dd>
                    </div>
                </div>
            </div>

            <div class="section mb-4">
                <h5 class="section-title text-primary mb-3">
                    <i class="bi bi-credit-card"></i> Миграционная карта
                </h5>
                <div class="row">
                    <div class="col-md-3">
                        <dt>Серия карты</dt>
                        <dd>@Model.Card.CardSeries</dd>
                    </div>
                    <div class="col-md-3">
                        <dt>Номер карты</dt>
                        <dd>@Model.Card.CardNumber</dd>
                    </div>
                    <div class="col-md-3">
                        <dt>Дата выдачи</dt>
                        <dd>@Model.Card.IssueDate.ToShortDateString()</dd>
                    </div>
                    <div class="col-md-3">
                        <dt>Действительна до</dt>
                        <dd>@Model.Card?.ExpiryDate?.ToShortDateString()</dd>
                    </div>
                </div>
            </div>

            <div class="section mb-4">
                <h5 class="section-title text-primary mb-3">
                    <i class="bi bi-calendar-event"></i> Информация о пребывании
                </h5>
                <div class="row">
                    <div class="col-md-4">
                        <dl>
                            <dt>Дата въезда</dt>
                            <dd>@Model.EntryDate.ToShortDateString()</dd>

                            <dt>Дата окончания регистрации</dt>
                            <dd>@Model.RegistrationEndDate?.ToShortDateString()</dd>

                            <dt>Адрес регистрации</dt>
                            <dd>@Model.RegistrationAddress</dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl>
                            <dt>Дата регистрации</dt>
                            <dd>@Model.RegistrationDate.ToShortDateString()</dd>
                            

                            <dt>Статус</dt>
                            <dd>
                                <span class="badge bg-info">@Model.Status</span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl>
                            <dt>Цель визита</dt>
                            <dd>@Model.Reason?.ReasonType</dd>

                            <dt>Тип документа</dt>
                            <dd>@Model.Reason?.DocumentType</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.MigrantID" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Редактировать
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Вернуться к списку
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .section {
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .section-title {
        border-bottom: 2px solid #0d6efd;
        padding-bottom: 0.5rem;
    }

    dt {
        font-weight: 500;
        color: #6c757d;
        margin-bottom: 0.3rem;
    }

    dd {
        margin-bottom: 1rem;
        padding-left: 1rem;
    }

    .badge {
        font-size: 0.9em;
        padding: 0.5em 0.75em;
    }
</style>
@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}