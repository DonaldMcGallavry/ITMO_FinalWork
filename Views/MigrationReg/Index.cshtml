@model ITMO_FinalWork.Utilities.PaginatedList<ITMO_FinalWork.Models.MigrationReg>

@{
    ViewData["Title"] = "Миграционный учет";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-passport"></i> @ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Новая регистрация
        </a>
    </div>
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Введите ФИО или паспорт" value="@ViewData["CurrentFilter"]" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Поиск
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Сброс</a>
                </div>
            </form>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-md-8">
                    <h5 class="mb-0">Список мигрантов</h5>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["NameSortParam"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    ФИО
                                    @if (ViewData["CurrentSort"]?.ToString() == "name_desc")
                                    {
                                        <i class="fas fa-sort-down"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort-up"></i>
                                    }
                                </a>
                            </th>
                            <th>Паспорт</th>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["DateSortParam"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    Дата регистрации
                                    @if (ViewData["CurrentSort"]?.ToString() == "date_desc")
                                    {
                                        <i class="fas fa-sort-down"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort-up"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["StatusSortParam"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    Статус
                                    @if (ViewData["CurrentSort"]?.ToString() == "status_desc")
                                    {
                                        <i class="fas fa-sort-down"></i>
                                    }
                                    else if (ViewData["CurrentSort"]?.ToString() == "status")
                                    {
                                        <i class="fas fa-sort-up"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                </a>
                            </th>
                            <th>Действия</th>
                            <th>Снять с учета</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.LastName @item.FirstName @item.MiddleName</td>
                                <td>@item.Passport?.Series @item.Passport?.Number</td>
                                <td>@item.RegistrationDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <span class="badge @(item.Status == "IsRegistrated" ? "badge-success" : "badge-secondary")">
                                        @(item.Status == "IsRegistrated" ? "Зарегистрирован" : "В архиве")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a asp-action="Details" asp-route-id="@item.MigrantID"
                                           class="btn btn-sm btn-info" title="Просмотр">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@item.MigrantID"
                                           class="btn btn-sm btn-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.MigrantID"
                                              class="d-inline" onsubmit="return confirm('Удалить запись?');">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Удалить">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                                <td>
                                    <form asp-action="ChangeStatus" asp-route-id="@item.MigrantID" method="post">
                                        @if (item.Status == "IsRegistrated")
                                        {
                                            <button type="submit" class="btn btn-sm btn-warning" title="Снять с учета">
                                                <i class="fas fa-archive"></i> Снять с учета
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-success" title="Восстановить">
                                                <i class="fas fa-redo"></i> Восстановить
                                            </button>
                                        }
                                    </form>
                                </td>
                               @*  <td>
                                    @if (item.Status == "IsRegistrated")
                                    {
                                         <div class="flex-grow-1 text-center">
                                        <form asp-action="ChangeStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.MigrantID" />
                                            <button type="submit"
                                                    class="btn btn-outline-warning px-4"
                                                    title="Снять с учета"
                                                    onclick="return confirm('Вы точно хотите снять с учета?')">
                                                <i class="fas fa-archive"></i>
                                            </button>
                                        </form>
                                        </div>
                                    }
                                </td> *@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @prevDisabled">
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"

                           class="page-link">
                            <i class="fas fa-chevron-left"></i> Назад
                        </a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@i"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               class="page-link">
                                @i
                            </a>
                        </li>
                    }
                    <li class="page-item @nextDisabled">
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="page-link">
                            Вперед <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th, .table td {
            vertical-align: middle;
        }

        .badge-success {
            background-color: #28a745;
        }

        .badge-secondary {
            background-color: #6c757d;
        }

    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script>
        $(document).ready(function() {
            $('[title]').tooltip();
        });
    </script>
}